<?xml version="1.0" encoding="utf-8"?>
<!-- Use a RelativeLayout (or ConstraintLayout) to allow dynamic changes -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container for List Fragment -->
    <FrameLayout
        android:id="@+id/containerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Container for WebView Fragment (initially gone) -->
    <FrameLayout
        android:id="@+id/containerWebView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

</RelativeLayout>
